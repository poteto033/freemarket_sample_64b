.wapper  
  .header_item
    .hurima_logo
  .body_item
    =form_for @item do |f|
      .item_image
        .text
          %p 出品画像
          %span 必須
        .item_image_paragraph
          =f.fields_for :images do |i|
            = i.label :image, class: "image-file" do
              .file-btn
                =icon("fas", "camera",class: "icon")
                %p 
                  ドラッグアンドドロップ
                  %br
                    またはクリックしてファイルをダウンロード
                =i.file_field :image, class: 'file'
        - if @item.errors[:images].any?
          %p.error-message 画像がありません
      .item_name
        .text
          %p 商品名
          %span 必須
        .item_input_form_name
          = f.text_field :name, maxlength: '40', placeholder: "４０字まで", class: "name_field"
        -if @item.errors[:name].any?
          %p.error-message 選択してください         
      .item_description
        .text
          %p 商品の説明
          %span 必須
        =f.text_area :text, maxlength:'1000', placeholder: "商品の説明（必須 1,000文字以内（色、重さ、定価、注意点など)", class: "item-text_field"
        -if @item.errors[:text].any?
          %p.error-message 選択してください       
      .item_category
        .text
          %p カテゴリー
          %span 必須 
        .item_category_form
          = f.collection_select :category_id, @category_parent,:id,:name,{include_blank: "選択してください"},{class: "input-select",id: "parent-form"}
      -if @item.errors[:category].any?
        %p.error-message-category 選択してください       
      .item_brand
        .text
          %p ブランド
          %span.brand_text 任意
        .item_brand_form
          = f.text_field :brand_id, placeholder: "例  GUCCI", class: "name_field"
      .item_status
        .text
          %p 商品の状態
          %span 必須
        .item_status_form
          = f.collection_select :item_status, Itemstatus.all,:id,:name,{include_blank: "選択してください"},class: "input-select"
        -if @item.errors[:item_status].any?
          %p.error-message 選択してください
      .item_delivery
        %p.text1 配送について
        .item_delivery_burden
          .text
            %p 配送料の負担
            %span 必須
          .item_delevery_burden_input
            =f.collection_select :delivery_charge,Deliverycharge.all,:id,:name,{include_blank: "選択してください"}, class: "input-select"
          -if @item.errors[:delivery_charge].any?
            %p.error-message 選択してください       
        .item_delivery_area
          .text
            %p 発送元の地域
            %span 必須
          .item_delevery_area_input
            = f.collection_select :delivery_area, Prefecture.all,:id,:name,{include_blank: "選択してください"}, class: "input-select"
          -if @item.errors[:delivery_area].any?
            %p.error-message 選択してください       
        .item_delevery_day
          .text
            %p 発送までの日数
            %span
              必須
        .item_delevery_day_input
          = f.collection_select :delivery_days,Deliverydays.all , :id,:name,{include_blank: "選択してください"}, class: "input-select"
        -if @item.errors[:delivery_days].any?
          %p.error-message 選択してください       
      .item_price
        %p.text1
          価格（¥300〜9,999,999）
        .text
          %p
            販売価格
            %span 必須
        .item_price_number
          %p
            ¥
          = f.number_field :price, placeholder: "0", class: "input-form_price",id: "price-form", onKeyUp: "myFunc()"
        -if @item.errors[:price].any?
          %p.error-message-price 半角数字で300以上999999以内で入力してください      
      .item_price_fee
        %p
          販売手数料(3%)
        %span#item_price_number
      .item_sell_btn
        .submit-btn
          =f.submit "出品する", class: "listing_button"
          =link_to "戻る","#"
  .footer_item
 


    



    



